            <Font size="23.0" />
         </font></Button>
      <Button fx:id="registerB" layoutX="556.0" layoutY="384.0" mnemonicParsing="false" onAction="#buttonResponse" prefHeight="60.0" prefWidth="134.0" text="Register">
         <font>
            <Font size="23.0" />
         </font></Button>
