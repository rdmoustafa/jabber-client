            <Font name="Helvetica" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="username" alignment="CENTER" layoutX="287.0" layoutY="194.0" prefHeight="60.0" prefWidth="271.0" promptText="Enter your username">
         <font>
            <Font size="24.0" />
         </font></TextField>
      <Button fx:id="signInB" layoutX="166.0" layoutY="386.0" mnemonicParsing="false" onAction="#buttonResponse" prefHeight="58.0" prefWidth="121.0" text="Sign In">
